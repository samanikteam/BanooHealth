@page
@model Samanik.Web.Areas.Administration.Pages.Users.IndexModel
@{
    Layout = "_AdminLayout";
}

<div class="container-fluid">

    <div class="layout-specing">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header" data-background-color="">
                    <h4 class="card-title">کاربران</h4>
                </div>

                <div class="card-content">
                    <div class="">
                        <br />
                        <div>
                            <a class="btn btn-primary m-2" data-bs-toggle="modal" data-bs-target="#CreateNewUser">افزودن کاربر جدید</a>
                        </div>
                        <br />
                        <form role="form" method="post">
                            <table id="datatables" class="table table-striped table-bordered table-hover" cellspacing="0" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="text-align:center">نام</th>
                                        <th style="text-align:center">نام خانوادگی</th>
                                        <th style="text-align:center">کد ملی</th>
                                        <th style="text-align:center">شماره تماس</th>
                                        @*<th style="text-align:center">نقش</th>*@
                                        <th style="text-align:center">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in @Model.dto)
                                    {
                                        <tr>
                                            <td style="text-align:center">@item.FirstName</td>
                                            <td style="text-align:center">@item.LastName</td>
                                            <td style="text-align:center">@item.NationalCode</td>
                                            <td style="text-align:center">@item.Tel</td>
                                            @*<td>@item.RolesName</td>*@
                                            <td style="text-align:center">
                                                <a href="/Administration/Users/EditUser" class="btn btn-icon btn-pills btn-soft-success"><i class="uil uil-pen"></i></a>
                                                <button asp-page-handler="DeleteUser" asp-route-Userid="@item.Id" class="btn btn-icon btn-pills btn-soft-danger"><i class="uil uil-trash"></i></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Start Modal Create User -->
<div class="modal fade" id="CreateNewUser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-bottom p-3">
                <h5 class="modal-title" id="exampleModalLabel">افزودن کاربر جدید</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body p-3 pt-4">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        @*  <div class="col-md-3">
                            <div class="d-grid">
                            <p class="text-muted">لطفا با زدن دکمه بارگزاری تصویر ،عکس مورد نظرتان راانتخاب کنید.</p>
                            <div class="preview-box d-block justify-content-center rounded shadow overflow-hidden bg-light p-1"></div>
                            <input type="file" id="input-file" name="Image" accept="image/*" onchange={handleChange()} hidden />
                            <label class="btn-upload btn btn-primary mt-4" for="input-file">بارگذاری تصویر</label>
                            <br />
                            <div class="mb-3">
                            <label class="form-label">عنوان تصویر: <span class="text-danger">*</span></label>
                            <input  id="name" type="text" class="form-control" placeholder="Image Tilte :">
                            </div>
                            <br />
                            <div class="mb-3">
                            <label class="form-label">متن جایگذین تصویر: <span class="text-danger">*</span></label>
                            <input  id="name" type="text" class="form-control" placeholder="Image Alt :">
                            </div>
                            </div>
                            </div><!--end col-->*@

                        <div class="col-md-12 mt-4 mt-sm-0">
                            <div class="me-md-4">

                                <div class="row">
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label class="form-label">شماره موبایل جهت ورود به سامانه: <span class="text-danger">*</span></label>
                                            <input asp-for="createDto.UserName"  type="text" class="form-control" placeholder="شماره موبایل را وارد کنید" required>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label class="form-label">نام: <span class="text-danger">*</span></label>
                                            <input asp-for="createDto.FirstName" type="text" class="form-control" placeholder="نام کاربر را وارد کنید" required>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label class="form-label">نام خانوادگی: <span class="text-danger">*</span></label>
                                            <input asp-for="createDto.LastName"  type="text" class="form-control" placeholder="نام خانوادگی کاربر را وارد کنید" required>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">کد ملی: <span class="text-danger">*</span></label>
                                            <input asp-for="createDto.NationalCode"  type="text" class="form-control" placeholder="کد ملی را وارد کنید" required>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">شماره تماس: <span class="text-danger">*</span></label>
                                            <input asp-for="createDto.Tel"  type="text" class="form-control" placeholder="شماره تماس کاربر را وارد کنید" required>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">نقش کاربر: <span class="text-danger">*</span></label>
                                            <select asp-items="ViewBag.Roles" name="RoleId" class=" form-control " multiple>
                                                <option value="">نقش کاربر را مشخص کنید</option>
                                            </select>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">رمز عبور: <span class="text-danger">*</span></label>
                                            <input asp-for="createDto.Password"  type="password" class="form-control" placeholder="رمز عبور را وارد کنید" required>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">تکرار رمز عبور: <span class="text-danger">*</span></label>
                                            <input asp-for="createDto.ConfirmPassword" type="password" class="form-control" placeholder="مجددا رمز عبور را وارد کنید" required>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-lg-12 text-end">
                                        <button type="submit" class="btn btn-primary">ثبت اطلاعات</button>
                                    </div><!--end col-->
                                </div>

                            </div>
                        </div><!--end col-->
                    </div><!--end row-->
                </form>
            </div>

        </div>
    </div>
</div>

<!-- End modal -->
@section Scripts{

<!-- Start Datatable -->
<script src="/datatable/jquery.datatables.js"></script>

<script>
    $(document).ready(function () {
        $('#datatables').DataTable({
            language: {
                url: "/datatable/fa-lang.json"
            },
            "pagingType": "full_numbers",
            "lengthMenu": [
                [10, 25, 50, -1],
                [10, 25, 50, "All"]
            ],
            responsive: true,
            "order": [[0, "desc"]]
        });
        var table = $('#datatables').DataTable();

        $('.card .material-datatables label').addClass('form-group');
    });
</script>
<!-- End Datatable -->
}

