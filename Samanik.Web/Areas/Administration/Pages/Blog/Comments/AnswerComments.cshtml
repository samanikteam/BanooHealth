@page
@model Samanik.Web.Areas.Administration.Pages.Blog.Comments.AnswerCommentsModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "مدیریت پاسخگویی به نظرات";
}


<!--Start container-->
<div class="container-fluid">
    <div class="layout-specing">
        <div class="d-md-flex justify-content-between">
            <div>
                <h5 class="mb-0">نظرات</h5>

                <nav aria-label="breadcrumb" class="d-inline-block mt-1">
                    <ul class="breadcrumb breadcrumb-muted bg-transparent rounded mb-0 p-0">
                        <li class="breadcrumb-item"><a href="/Administration/Index">سمانیک</a></li>
                        <li class="breadcrumb-item active" aria-current="page">مدیریت پاسخگویی به نظرات</li>
                    </ul>
                </nav>
            </div>


        </div>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-dark" role="alert"></div>
        <h6 class="mt-4 mb-0"> نظرات </h6>
        <div class="row">
            <div class="col-12 mt-4">
                <div class="table-responsive shadow rounded">
                    <table class="table table-center bg-white mb-0">
                        <thead>
                            <tr>
                                <th class="border-bottom py-3">ردیف</th>
                                <th class="border-bottom py-3">عنوان</th>
                                <th class="border-bottom py-3">تاریخ ایجاد</th>
                                <th class="border-bottom py-3">ایمیل</th>
                                <th class="border-bottom py-3" style="min-width: 100px;">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListComment.Comments.Count == 0)
                            {
                                <tr>
                                    <td style="color:red">نظری یافت نشد</td>

                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model.ListComment.Comments)
                                {
                                    <tr>
                                        <th>@(++Model.ListComment.skip)</th>
                                        <th>@item.Name</th>
                                        <td>@item.RegisterDate</td>
                                        <td>@item.Email</td>
                                        <td>
                                            @*asp-page="/Answers" asp-route-id="@item.Id" asp-route-email="@item.Email"*@
                                            <a href="/Administration/Blog/Comments/answers/@item.Id/@item.ArticleId/@item.Email" >
                                              
                                                <i class="mdi mdi-reply"></i> پاسخ
                                            </a>
                                        </td>

                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

    <div paging-model="@Model.PagingData" page-class="btn border mt-3"
         page-class-links="text-center" page-class-normal="btn" page-class-selected="btn btn-info  active" page-class-label="p-2 font-weight-bold  pt-md-2  text-center" class="text-center">
    </div>
</div><!--end container-->
<!--End page-content" -->