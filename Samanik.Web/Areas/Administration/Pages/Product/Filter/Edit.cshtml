@page "{id}"
@model Samanik.Web.Areas.Administration.Pages.Product.Filter.EditModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "مدیریت فیلتر محصولات";
}




<div class="container-fluid">
    <div class="layout-specing">
        <div class="modal-content">
            <div class="modal-header border-bottom p-3">
                <h5 class="modal-title" id="exampleModalLabel">ویرایش ‌فیلتر</h5>
            </div>

            <div class="modal-body p-3 pt-4">
                <div class="modal-body p-3 pt-4">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="dto.Id">
                        <div class="row">

                            <div class="col-md-12 mt-4 mt-sm-0">
                                <div class="me-md-4">

                                    <div class="row">
                                        <div class="col-6">
                                            <div class="mb-3">
                                                <label class="form-label">عنوان: <span class="text-danger">*</span></label>
                                                <input id="userName"  type="text" class="form-control" asp-for="dto.Title" placeholder=" عنوان را وارد کنید"
>
                                            </div>
                                        </div><!--end col-->




                                        <br>
                                        <div class="col-lg-12 text-end">
                                            <button type="submit" class="btn btn-primary">ویرایش</button>
                                        </div><!--end col-->
                                    </div>

                                </div>
                            </div><!--end col-->
                        </div><!--end row-->
                    </form>
                </div>
            </div>

        </div>

    </div>
</div>




