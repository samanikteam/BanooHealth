    <!--آخرین مطالب-->
    <div class="blog_area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section_title s_title_style3">
                        <h2>آخرین مطالب @Model.settingDto.Title</h2>
                    </div>
                    <div class="blog_container blog_column4 owl-carousel">
                        @foreach (var item in Model.ArticleDto.Articles.OrderByDescending(a => a.RegisterDate).Where(a=>a.IsDelete==false))
                        {
                            <article class="single_blog">
                                <figure>
                                    <div class="blog_thumb">
                                        <a href="/Blog/ArticleDetails/@item.Id/@item.Slug"><img src="data:/Them/assets/img/blog;base64,@Convert.ToBase64String(item.Avatar)" alt="@item.AvatarAlt" title="@item.AvatarTitle"></a>
                                    </div>
                                    <figcaption class="blog_content">
                                        <h4><a href="/Blog/ArticleDetails/@item.Id/@item.Slug">@item.Title</a></h4>
                                        <div class="post_meta">
                                            <p>توسط  <a href="#">مدیر</a> در تاریخ <a href="#">@item.RegisterDate</a></p>
                                        </div>
                                        <div class="post_desc">
                                            <p>@item.Description</p>
                                        </div>
                                        <footer class="post_readmore">
                                            <a href="/Blog/ArticleDetails/@item.Id/@item.Slug">بیشتر بخوانید</a>
                                        </footer>
                                    </figcaption>
                                </figure>
                            </article>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <!--banner area start-->
    <div class="banner_area banner_three_bottom mb-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <figure class="single_banner">
                        <div class="banner_thumb">
                            <a href="@Model.bannerDto.Link7"><img src="~/Them/assets/img/bg/@Model.bannerDto.AvatarShow7" alt="@Model.bannerDto.Title7"></a>
                        </div>
                    </figure>
                </div>
                <div class="col-lg-6 col-md-6">
                    <figure class="single_banner">
                        <div class="banner_thumb">
                            <a href="@Model.bannerDto.Link8"><img src="~/Them/assets/img/bg/@Model.bannerDto.AvatarShow8" alt="@Model.bannerDto.Title8"></a>
                        </div>
                    </figure>
                </div>
            </div>
        </div>
    </div>
    <!--home section bg area start-->
