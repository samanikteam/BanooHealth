@page
@model IndexModel
@{
    Layout = "";

    ViewData["Title"] = "صفحه اصلی | سمانیک";
    ViewData["Description"] = Model.settingDto.Description;
    ViewData["Keywords"] = Model.settingDto.Keywords;

    int count = Model.productDto.Products.Where(a => a.IsDelete == false && a.popular == true).Count();
}
<!DOCTYPE html>
<html class="no-js" lang="fa" dir="rtl">

<head>
    <partial name="_MetaTags" />
    <partial name="_Styles" />
</head>

<body>
    <!--Offcanvas menu area start-->
    <div class="off_canvars_overlay"></div>
    <!--هدر-->
    <header>
        <div class="main_header">
            <div class="container">
                <!--header top start-->
                <div class="header_top">
                    <div class="row align-items-center">
                        <a asp-page="/Index">
                            <img src="~/Them/assets/img/bg/@Model.bannerDto.AvatarShow9" alt="@Model.bannerDto.Title9"
                                 title="@Model.bannerDto.Title9" />
                        </a>
                    </div>
                </div>
                <!--header top start-->
                <!--header middel start-->
                <div class="header_middle sticky-header">
                    <div class="row align-items-center">
                        <div class="col-lg-2 col-md-6">
                            <div class="logo">
                                <a asp-page="/Index"><img src="~/Them/LogoSamanik/MainLogo.png" alt=""></a>
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-12">
                            <div class="main_menu menu_position text-center">
                                <nav>
                                    <ul>
                                        <li>
                                            <a class="active" asp-page="/Index">خانه<i class="fa "></i></a>
                                        </li>
                                        @await Component.InvokeAsync("ProductCategory")

                                        <li>
                                            <a asp-page="/Blog/Index">بلاگ<i class="fa "></i></a>
                                        </li>
                                        <li><a asp-page="/About">درباره ما</a></li>
                                        <li><a asp-page="/Contact"> تماس با ما</a></li>
                                        <li><a asp-page="/Login/loginApp"> پنل مدیریت</a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>

                    </div>
                </div>
                <!--header middel end-->
                <!--header bottom satrt-->
                <div class="header_bottom">
                    <div class="row align-items-center">
                        <div class="column1 col-lg-3 col-md-6">
                            <div class="categories_menu">
                                <div class="categories_title">
                                    <h2 class="categori_toggle">دسته بندی مقالات</h2>
                                </div>
                                <div class="categories_menu_toggle">
                                    @await Component.InvokeAsync("ArticleCategory")
                                </div>
                            </div>

                        </div>
                        <div class="column2 col-lg-6 ">
                            <div class="search_container">
                                <form asp-page="/Blog/ArticleSearch" id="livesearchtags" method="get">
                                    <div class="hover_category">
                                        <select class="select_option" name="categoryId" id="categori2">
                                            <option selected value="1">مقالات</option>
                                            <option value="2">محصولات </option>

                                        </select>
                                    </div>
                                    <div class="search_box">
                                        <input name="title" id="Name" placeholder="جستجو  ..." type="text">
                                        <button type="submit">جستجو</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                        <div class="column3 col-lg-3 col-md-6">
                            <div class="header_bigsale">
                                <a href="/Products/Popular/پر-فروش-ترین-مکمل-های-سلامتی">پرفروش‌ترین مکمل‌ها</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!--header bottom end-->
            </div>
        </div>
    </header>
    <!--اسلایدر-->
    <section class="slider_section slider_s_one mb-60 mt-20">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3 col-md-12">
                    <div class="swiper-container gallery-top">
                        <div class="slider_area swiper-wrapper">
                            @foreach (var item in Model.sliderDto.Sliders.OrderBy(a => a.Sort).Where(a => a.Status == true))
                            {
                                <div class="single_slider swiper-slide d-flex align-items-center" data-bgimg="/Them/assets/img/slider/@item.AvatarShow">
                                    <div class="slider_content">

                                    </div>
                                </div>
                            }
                        </div>
                        <!-- Add Arrows -->

                        <div class="swiper-pagination"></div>
                    </div>
                    <div class="swiper-container gallery-thumbs">
                        <div class="swiper-wrapper">
                            @foreach (var item in Model.sliderDto.Sliders.OrderBy(a => a.Sort).Where(a => a.Status == true))
                            {
                                <div class="swiper-slide">
                                    <a href="@item.Link"> @item.Title </a>
                                </div>
                            }
                        </div>
                    </div>

                </div>
                <div class="s_banner col-lg-3 col-md-12">
                    <!--banner area start-->
                    <div class="sidebar_banner_area">
                        <figure class="single_banner">
                            <div class="banner_thumb">
                                <a href="@Model.bannerDto.Link1"><img src="~/Them/assets/img/bg/@Model.bannerDto.AvatarShow1" alt="@Model.bannerDto.Title1" title="@Model.bannerDto.Title1"></a>
                            </div>
                        </figure>
                        <figure class="single_banner">
                            <div class="banner_thumb">
                                <a href="@Model.bannerDto.Link2"><img src="~/Them/assets/img/bg/@Model.bannerDto.AvatarShow2" alt="@Model.bannerDto.Title2" title="@Model.bannerDto.Title2"></a>
                            </div>
                        </figure>
                        <figure class="single_banner">
                            <div class="banner_thumb">
                                <a href="@Model.bannerDto.Link3"><img src="~/Them/assets/img/bg/@Model.bannerDto.AvatarShow3" alt="@Model.bannerDto.Title3" title="@Model.bannerDto.Title3"></a>
                            </div>
                        </figure>
                    </div>
                    <!--banner area end-->
                </div>
            </div>
        </div>
    </section>
    <!--شعار تبلیغاتی-->
    <div class="shipping_area mb-60">
        <div class="container">
            <div class="shipping_inner">
                @foreach (var item in Model.sloganDto.Slogans.Where(a => a.IsActive == true))
                {
                    <div class="single_shipping">
                        <div class="shipping_icone">
                            <img style="max-height:60px; max-width:60px;" src="data:/Them/assets/img/blog;base64,@Convert.ToBase64String(item.Avatar)" alt="@item.AvatarAlt" title="@item.AvatarTitle">
                        </div>
                        <div class="shipping_content">
                            <h4>@item.Title</h4>
                            <p>@item.Description</p>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    <!--banner area start-->
    <div class="banner_area banner_style2 mb-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <figure class="single_banner">
                        <div class="banner_thumb">
                            <a href="@Model.bannerDto.Link4"><img src="~/Them/assets/img/bg/@Model.bannerDto.AvatarShow4" alt="@Model.bannerDto.Title4"></a>
                        </div>
                    </figure>
                </div>
                <div class="col-lg-6 col-md-6">
                    <figure class="single_banner">
                        <div class="banner_thumb">
                            <a href="@Model.bannerDto.Link5"><img src="~/Them/assets/img/bg/@Model.bannerDto.AvatarShow5" alt="@Model.bannerDto.Title5"></a>
                        </div>
                    </figure>
                </div>
                <div class="col-lg-3 col-md-3">
                    <figure class="single_banner">
                        <div class="banner_thumb">
                            <a href="@Model.bannerDto.Link6"><img src="~/Them/assets/img/bg/@Model.bannerDto.AvatarShow6" alt="@Model.bannerDto.Title6"></a>
                        </div>
                    </figure>
                </div>
            </div>
        </div>
    </div>
    <!--آخرین مطالب-->
    <div class="blog_area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section_title s_title_style3">
                        <h2>آخرین مطالب @Model.settingDto.Title</h2>
                    </div>
                    <div class="blog_container blog_column4 owl-carousel">
                        @foreach (var item in Model.ArticleDto.Articles.OrderByDescending(a => a.RegisterDate).Where(a => a.IsDelete == false))
                        {
                           @Html.Partial("_IndexArticles", item)
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <!--banner area start-->
    <div class="banner_area banner_three_bottom mb-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <figure class="single_banner">
                        <div class="banner_thumb">
                            <a href="@Model.bannerDto.Link7"><img src="~/Them/assets/img/bg/@Model.bannerDto.AvatarShow7" alt="@Model.bannerDto.Title7"></a>
                        </div>
                    </figure>
                </div>
                <div class="col-lg-6 col-md-6">
                    <figure class="single_banner">
                        <div class="banner_thumb">
                            <a href="@Model.bannerDto.Link8"><img src="~/Them/assets/img/bg/@Model.bannerDto.AvatarShow8" alt="@Model.bannerDto.Title8"></a>
                        </div>
                    </figure>
                </div>
            </div>
        </div>
    </div>
    <!--home section bg area start-->
    <div class="home_section_bg">

        <!--دسته بندی مقالات با آیکون-->
        <div class="categories_product_area mb-55">
            <div class="container">
                <div class="categories_product_inner">
                    @foreach (var item in Model.ArticleCategoryDto.articleCategories.Where(a => a.IsDelete == false && a.ParentId == null))
                    {
                        <div class="single_categories_product">
                            <div class="categories_product_content">
                                <h4><a href="/Blog/Category/@item.Id/@item.Slug">@item.Title</a></h4>
                            </div>
                            <div class="categories_product_thumb">
                                <a href="/Blog/Category/@item.Id/@item.Slug"><img src="data:/Them/assets/img/blog;base64,@Convert.ToBase64String(item.Avatar)" alt="@item.AvatarAlt" title="@item.AvatarTitle"></a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!--پر بازدیدتری مقالات-->
        <div id="most_visited_articles" class="blog_area">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section_title s_title_style3">
                            <h2>پربازدیدترین مطالب @Model.settingDto.Title</h2>
                        </div>
                        <div class="blog_container blog_column4 owl-carousel">
                            @foreach (var item in Model.ArticleDto.Articles.OrderByDescending(a => a.Visit).Where(a => a.IsDelete == false).Take(10))
                            {
                                @Html.Partial("_IndexArticles", item)
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <br />
        <br />

       
        <br />
        <br />


        <!--پرفروش ترین محصولات-->
        <div class="product_area">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="product_header">
                            <div class="section_title">
                                <h2>محصولات پرفروش</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel">
                        <div class="product_carousel product_style product_column5 owl-carousel">
                            @foreach (var item in Model.productDto.Products.Where(a => a.IsDelete == false && a.popular == true))
                            {
                                @Html.Partial("_Products", item)
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>


    </div>
    <!--home section bg area end-->

    @await Component.InvokeAsync("Footer")
    <partial name="_Script" />
</body>

</html>