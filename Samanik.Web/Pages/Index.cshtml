        <!--دسته بندی مقالات با آیکون-->
        <div class="categories_product_area mb-55">
            <div class="container">
                <div class="categories_product_inner">
                    @foreach (var item in Model.ArticleCategoryDto.articleCategories.Where(a => a.IsDelete == false && a.ParentId == null))
                    {
                        <div class="single_categories_product">
                            <div class="categories_product_content">
                                <h4><a href="/Blog/ArticleByArticleCategory/@item.Id/@item.Slug">@item.Title</a></h4>
                            </div>
                            <div class="categories_product_thumb">
                                <a href="/Blog/ArticleByArticleCategory/@item.Id/@item.Slug"><img src="data:/Them/assets/img/blog;base64,@Convert.ToBase64String(item.Avatar)" alt="@item.AvatarAlt" title="@item.AvatarTitle"></a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!--پر بازدیدتری مقالات-->
        <div id="most_visited_articles" class="blog_area">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section_title s_title_style3">
                            <h2>پربازدیدترین مطالب @Model.settingDto.Title</h2>
                        </div>
                        <div class="blog_container blog_column4 owl-carousel">
                            @foreach (var item in Model.ArticleDto.Articles.OrderByDescending(a => a.Visit).Where(a=>a.IsDelete==false))
                            {
                                articlecounter++;
                                <article class="single_blog">
                                    <figure>
                                        <div class="blog_thumb">
                                            <a href="/Blog/ArticleDetails/@item.Id/@item.Slug"><img src="data:/Them/assets/img/blog;base64,@Convert.ToBase64String(item.Avatar)" alt="@item.AvatarAlt" title="@item.AvatarTitle"></a>
                                        </div>
                                        <figcaption class="blog_content">
                                            <h4><a href="/Blog/ArticleDetails/@item.Id/@item.Slug">@item.Title</a></h4>
                                            <div class="post_meta">
                                                <p>بازدید  <a href="#">@item.Visit</a> | تاریخ <a href="#">@item.RegisterDate</a></p>
                                            </div>
                                            <div class="post_desc">
                                                <p>@item.Description</p>
                                            </div>
                                            <footer class="post_readmore">
                                                <a href="/Blog/ArticleDetails/@item.Id/@item.Slug">بیشتر بخوانید</a>
                                            </footer>
                                        </figcaption>
                                    </figure>
                                </article>
                                if (articlecounter == 10)
                                {
                                    articlecounter = 0;
                                    break;
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <br />
        <br />

