@model Data.Models.ArticleDto

<article class="single_blog single_blog_gallery">
    <figure>
        <div class="blog_thumb">
            <div class="single_blog_thumb">
                <a asp-page="ArticleDetails" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug"><img src="data:/Them/assets/img/blog;base64,@Convert.ToBase64String(Model.Avatar)" alt="@Model.AvatarAlt"></a>
            </div>
        </div>
        <figcaption class="blog_content">
            <h4 class="post_title"><a asp-page="ArticleDetails" asp-route-slug="@Model.Slug" asp-route-id="@Model.Id">@Model.Title</a></h4>
            <div class="blog_meta">
                <span class="author">ارسال توسط : <a href="#">@Model.author</a> / </span>
                <span class="meta_date">ارسال شده در :  <a href="#">@Model.RegisterDate</a></span>
            </div>
            <div class="blog_desc">
                <p>@Model.Description</p>
            </div>
            <footer class="btn_more">
                <a asp-page="ArticleDetails" asp-route-slug="@Model.Slug" asp-route-id="@Model.Id"> بیشتر بخوانید</a>
            </footer>
        </figcaption>
    </figure>
</article>