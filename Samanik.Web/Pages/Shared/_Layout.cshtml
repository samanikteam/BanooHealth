    <partial name="_Script" />


    <script>
        $(function () {

            $("#Name").keyup(function (e) {
                var n = $("#Name").val();
                var sn = $("#categori2").val();
                $.get("/Home/Index?Name=" + n + "&SurName=" + sn, function (r) {
                    //update ui with results
                    $("#resultsTable").html(r);
                });

            });

        });

    </script>


